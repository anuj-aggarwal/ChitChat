<!doctype html>
<html lang="en">
<head>

    <% include partials/header %>

    <title>Create New Channel</title>

    <!-- Custom CSS: common.css -->
    <link rel="stylesheet" href="/css/common.css">

    <!-- Custom JS: common.js -->
    <script src="/js/common.js"></script>

</head>

<body>

<% include partials/sidebar %>

<!-- MAIN NEW CHANNEL PAGE HERE -->
<div id="main">
    <!-- Create new Channel Heading -->
    <div class="container green lighten-3" id="round-heading">
        <h2 class="center">
            <!-- HAMBURGER FOR SLIDE-OUT PROFILE SIDENAV -->
            <a href="#" id="profile-collapse" data-activates="profile-sidebar" class="button-collapse hide-on-large-only left">
                <i class="fa fa-bars"></i>
            </a>
            Create new Channel
        </h2>
    </div>

    <!-- New Channel Form Container -->
    <div class="container">
        <!-- Success Alerts -->
        <% if(success && success.length > 0) { %>
        <div class="ui positive message">
            <p><%= success %></p>
        </div>
        <% } %>
        <!-- Error Alerts -->
        <% if(error && error.length > 0) { %>
        <div class="ui error message">
            <p><%= error %></p>
        </div>
        <% } %>

        <form action="/channels/new" method="POST">
            <div class="row">
                <!-- Input Box -->
                <div class="col s10">
                    <input id="channel-name" name="channelName" class="input-field" type="text" placeholder="Enter Channel Name">
                </div>
                <!-- Create Button -->
                <div class="col s2">
                    <button class="btn">Create</button>
                </div>
            </div>
        </form>
    </div>  <!-- End of Create Channel Container -->

</div>  <!-- END OF MAIN PAGE -->

</body>
</html>