<!doctype html>
<html lang="en">
<head>

    <% include ../partials/header %>

    <title><%= title %></title>

    <!-- Custom CSS: common.css -->
    <link rel="stylesheet" href="/css/common.css">
    <!-- Custom CSS: group.css -->
    <link rel="stylesheet" href="/css/group.css">

    <!-- Custom JS: common.js -->
    <script src="/js/common.js"></script>

</head>
<body>

<% include ../partials/sidebar %>

<!-- MAIN CHAT PAGE HERE -->
<div id="main">
    <!-- Chats Heading: Group Name -->
    <div class="green lighten-3" id="chats-heading">
        <h3 class="center" id="chat-heading">
            <!-- HAMBURGER FOR SLIDE-OUT PROFILE SIDENAV -->
            <a href="#" id="profile-collapse" data-activates="profile-sidebar" class="button-collapse hide-on-large-only left">
                <i class="fa fa-bars"></i>
            </a>

            <%= title %>

            <!-- ICON FOR Chat -->
            <a href="/groups/<%= groupId %>/chat" id="chat-icon" class="right">
                <i class="fa fa-commenting-o"></i>
            </a>
        </h3>
    </div>

    <div class="container">
        <ul>
            <% members.forEach(member => { %>
                <li>
                    <%= member %>
                </li>
            <% }) %>
        </ul>

        <form action="/groups/<%= groupId %>/leave" method="POST">
            <button>Leave Group</button>
        </form>
    </div>

</div>  <!-- END OF MAIN PAGE -->


</body>
</html>