<!doctype html>
<html lang="en">
<head>

    <% include partials/header %>

    <title><%= title %></title>

    <!-- Custom CSS: common.css -->
    <link rel="stylesheet" href="/css/common.css">
    <!-- Custom CSS: chats.css -->
    <link rel="stylesheet" href="/css/chat.css">

    <!-- Socket io -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Custom JS: common.js -->
    <script src="/js/common.js"></script>
    <!-- Custom JS: chat.js -->
    <script src="/js/group.js"></script>


</head>
<body>

<% include partials/sidebar %>

<!-- MAIN CHAT PAGE HERE -->
<div id="main">
    <!-- Chats Heading: Username of Receiver -->
    <div class="green lighten-3" id="chats-heading">
        <h3 class="center" id="chat-heading">
            <!-- HAMBURGER FOR SLIDE-OUT PROFILE SIDENAV -->
            <a href="#" id="profile-collapse" data-activates="profile-sidebar" class="button-collapse hide-on-large-only left">
                <i class="fa fa-bars"></i>
            </a>
            <%= title %>
        </h3>
    </div>

    <!-- Chat Box -->
    <div id="chat-box">
        <!-- Message Display Container -->
        <div class="container" id="messages-container">
            <ul id="messages-list">
                <!-- List Items to be added by chat.js -->
            </ul>
        </div>
        <!-- Input Container: Chat input and Send button -->
        <div id="message-box" class="container">
            <div class="row">
                <!-- Input Box -->
                <div class="col s9">
                    <input id="input" type="text">
                </div>
                <!-- Send Button -->
                <div class="col s3">
                    <button id="send-button" class="btn btn-block">Send</button>
                </div>
            </div>
        </div>
    </div>  <!-- End of Chat Box -->


</div>  <!-- END OF MAIN PAGE -->


</body>
</html>