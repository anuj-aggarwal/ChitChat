<!doctype html>
<html lang="en">
<head>
    <!-- REQUIRED METATAGS -->
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Title -->
    <link rel="icon" href="img/favicon.ico" type="image/icon">
    <title>Create New Group</title>

    <!-- REQUIRED STYLESHEETS -->
    <!-- Materialize -->
    <link rel="stylesheet" href="/css/materialize.css">
    <!-- Lobster Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom CSS: chats.css -->
    <link rel="stylesheet" href="/css/newGroup.css">

    <!-- REQUIRED SCRIPTS -->
    <!-- Jquery -->
    <script src="/js/jquery-3.2.1.js"></script>
    <!-- Materialize -->
    <script src="/js/materialize.js"></script>

</head>

<body>

<!-- SIDEBAR CONTAINING USER'S DATA -->
<div id="profile-sidebar" class="grey lighten-2">
    <!-- ChitChat Heading -->
    <div id="chitchat-heading" class="green lighten-1">
        <div class="center">
            <i class="fa fa-comments-o"></i>
            ChitChat
        </div>
    </div>
    <!-- Container Containing Name, UserName and Links -->
    <div class="container">
        <!-- User's Image: Currently Placeholder Image -->
        <img id="user-image" src="https://via.placeholder.com/150x150" class="center-block circle responsive-img"
             alt="User Image">
        <!-- User's Name -->
        <h4 class="center"><%= user.name %></h4>
        <!-- User's Username -->
        <p class="center flow-text"><%= user.username %></p>


        <!-- TODO: Change The links to be Icons with ToolTips -->
        <!-- LINKS TO DIFFERENT PAGES -->
        <div class="row">
            <!-- Chats -->
            <div class="col s6">
                <a href="/chats" class="btn btn-block">
                    Chats
                    &nbsp;&nbsp;<i class="fa fa-whatsapp"></i>
                </a>
            </div>
            <!-- Add Chat -->
            <div class="col s6">
                <a href="/chats/new" class="btn btn-block">
                    Add Chat
                    &nbsp;<i class="fa fa-plus-square-o"></i>
                </a>
            </div>
            <!-- Groups -->
            <div class="col s6">
                <a href="/groups" class="btn btn-block">
                    Join a Group
                    &nbsp;&nbsp;<i class="fa fa-users"></i>
                </a>
            </div>
            <!-- Join a group -->
            <div class="col s6">
                <a href="/groups/new" class="btn btn-block">
                    Create a Group
                    &nbsp;&nbsp;<i class="fa fa-pencil"></i>
                </a>
            </div>
            <!-- Join a Channel -->
            <div class="col s6">
                <a href="/channels" class="btn btn-block">
                    Join Channel
                    &nbsp;&nbsp;<i class="fa fa-users"></i>
                </a>
            </div>
            <!-- Create a Channel -->
            <div class="col s6">
                <a href="/channels/new" class="btn btn-block">
                    Create Channel
                    &nbsp;&nbsp;<i class="fa fa-pencil"></i>
                </a>
            </div>
            <!-- Favourite Channels -->
            <div class="col s6">
                <a href="/channels/fav" class="btn btn-block">
                    Favourite Channels
                    &nbsp;&nbsp;<i class="fa fa-pencil"></i>
                </a>
            </div>
            <!-- Logout -->
            <div class="col s6">
                <a href="/logout" class="btn btn-block">
                    Logout
                    &nbsp;&nbsp;<i class="fa fa-sign-out"></i>
                </a>
            </div>
        </div>

    </div>  <!-- END OF SIDEBAR CONTAINER -->
</div>  <!-- END OF USER DATA SIDEBAR -->

<!-- MAIN CHATS PAGE HERE -->
<div id="main">
    <!-- Create new Group Heading -->
    <div class="container green lighten-3" id="new-group-heading">
        <h2 class="center">Create new Group</h2>
    </div>

    <!-- New Group Form Container -->
    <div class="container">
        <form action="/groups/new" method="POST">
            <div class="row">
                <!-- Input Box -->
                <div class="col s10">
                    <input id="group-name" name="groupName" class="input-field" type="text" placeholder="Enter Group Name">
                </div>
                <!-- Create Button -->
                <div class="col s2">
                    <button class="btn">Create</button>
                </div>
            </div>
        </form>
    </div>  <!-- End of Create Group Container -->

</div>  <!-- END OF MAIN PAGE -->

</body>
</html>