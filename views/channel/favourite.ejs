<!doctype html>
<html lang="en">
<head>

    <% include ../partials/header %>

    <title><%= user.name %></title>

    <!-- Custom CSS: common.css -->
    <link rel="stylesheet" href="/css/common.css">
    <!-- Custom CSS: chats.css -->
    <link rel="stylesheet" href="/css/favouriteChannels.css">

    <!-- Custom JS: common.js -->
    <script src="/js/common.js"></script>


</head>

<body>

<% include ../partials/sidebar %>

<!-- MAIN FAVOURITE CHANNELS PAGE HERE -->
<div id="main">
    <!-- Favourite Channels Heading -->
    <div class="container green lighten-3" id="round-heading">
        <h2 class="center">
            <!-- HAMBURGER FOR SLIDE-OUT PROFILE SIDENAV -->
            <a href="#" id="profile-collapse" data-activates="profile-sidebar" class="button-collapse hide-on-large-only left">
                <i class="fa fa-bars"></i>
            </a>
            Favourite Channels
        </h2>
    </div>
    <div class="container">
        <!-- FOR EACH CHANNEL, ADD A ROW FOR THE CHANNEL -->
        <% user.favouriteChannels.forEach(function(channel) { %>
        <a href="/channels/<%= channel.id %>/chat">
            <div class="row channel-row grey lighten-4">
                <!-- Channel Icon: Currently Placeholder -->
                <div class="col s2">
                    <img src="https://via.placeholder.com/60x60" class="circle responsive-img inline"
                         alt="Channel Icon">
                </div>
                <!-- Name of Channel -->
                <div class="col s10">
                    <h4 class="inline channel-name"><%= channel.name %></h4>
                </div>
            </div>
        </a>
        <% }) %>
        <!-- END OF FOR LOOP -->
    </div>  <!-- END OF CHANNELS CONTAINER -->
</div>  <!-- END OF MAIN PAGE -->

</body>
</html>