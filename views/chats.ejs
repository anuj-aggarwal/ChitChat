<!doctype html>
<html lang="en">
<head>
    <!-- REQUIRED METATAGS -->
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Title -->
    <link rel="icon" href="img/favicon.ico" type="image/icon">
    <title>Anuj Aggarwal</title>

    <!-- REQUIRED STYLESHEETS -->
    <!-- Materialize -->
    <link rel="stylesheet" href="css/materialize.css">
    <!-- Lobster Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom CSS: chats.css -->
    <link rel="stylesheet" href="/css/chats.css">

    <!-- REQUIRED SCRIPTS -->
    <!-- Jquery -->
    <script src="js/jquery-3.2.1.js"></script>
    <!-- Materialize -->
    <script src="js/materialize.js"></script>

</head>

<body>

<!-- SIDEBAR CONTAINING USER'S DATA -->
<div id="profile-sidebar" class="grey lighten-2">
    <!-- ChitChat Heading -->
    <div id="chitchat-heading" class="green lighten-1">
        <div class="center">
            <i class="fa fa-comments-o"></i>
            ChitChat
        </div>
    </div>
    <!-- Container Containing Name, UserName and Links -->
    <div class="container">
        <!-- User's Image: Currently Placeholder Image -->
        <img id="user-image" src="https://via.placeholder.com/150x150" class="center-block circle responsive-img"
             alt="User Image">
        <!-- User's Name -->
        <h4 class="center"><%= name %></h4>
        <!-- User's Username -->
        <p class="center flow-text"><%= chatter.username %></p>

        <!-- LINKS TO DIFFERENT PAGES -->
        <!-- Chats -->
        <a href="/chats" class="btn btn-block">
            Chats
            &nbsp;&nbsp;<i class="fa fa-whatsapp"></i>
        </a>
        <!-- Add Chat -->
        <a href="/chats/new" class="btn btn-block">
            Add Chat
            &nbsp;<i class="fa fa-plus-square-o"></i>
        </a>

        <!-- Groups -->
        <a href="/groups" class="btn btn-block">
            Join a Group
            &nbsp;&nbsp;<i class="fa fa-users"></i>
        </a>

        <!-- Join a group -->
        <a href="/groups/new" class="btn btn-block">
            Create a Group
            &nbsp;&nbsp;<i class="fa fa-pencil"></i>
        </a>
    </div>  <!-- END OF SIDEBAR CONTAINER -->
</div>  <!-- END OF USER DATA SIDEBAR -->

<!-- MAIN CHATS PAGE HERE -->
<div id="main">
    <!-- Chats Heading -->
    <div class="container green lighten-3" id="chats-heading">
        <h2 class="center">Chats</h2>
    </div>
    <div class="container">
        <!-- FOR EACH CHAT, ADD A ROW FOR THE CHAT -->
        <% chatter.chats.forEach(function(chat){ %>
            <a href="#">
                <div class="row chat-row grey lighten-4">
                    <!-- Image of Other Chatter/Group Image -->
                    <div class="col s2">
                        <img src="https://via.placeholder.com/60x60" class="circle responsive-img inline"
                             alt="Chat Receiver Image">
                    </div>
                    <!-- Name of Chat(Other User name/Group Name) -->
                    <div class="col s10">
                        <h4 class="inline chat-name"><%= chat.to %></h4>
                    </div>
                </div>
            </a>
        <% }) %>    <!-- END OF FOR LOOP -->
    </div>  <!-- END OF CHATS CONTAINER -->
</div>  <!-- END OF MAIN PAGE -->

</body>
</html>