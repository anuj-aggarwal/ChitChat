<!doctype html>
<html lang="en">
<head>

    <!-- REQUIRED METATAGS -->
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- TITLE OF PAGE: RECEIVER OF MESSAGE -->
    <link rel="icon" href="img/favicon.ico" type="image/icon">
    <title><%= title %></title>

    <!-- REQUIRED STYLESHEETS -->
    <!-- Materialize -->
    <link rel="stylesheet" href="/css/materialize.css">
    <!-- Lobster Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom CSS: common.css -->
    <link rel="stylesheet" href="/css/common.css">
    <!-- Custom CSS: chats.css -->
    <link rel="stylesheet" href="/css/chat.css">

    <!-- REQUIRED SCRIPTS -->
    <!-- Socket io -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Jquery -->
    <script src="/js/jquery-3.2.1.js"></script>
    <!-- Materialize -->
    <script src="/js/materialize.js"></script>
    <!-- Custom JS: chat.js -->
    <script src="/js/chat.js"></script>


</head>
<body>

<!-- SIDEBAR CONTAINING USER'S DATA -->
<div id="profile-sidebar" class="grey lighten-2">
    <!-- ChitChat Heading -->
    <div id="chitchat-heading" class="green lighten-1">
        <div class="center">
            <i class="fa fa-comments-o"></i>
            ChitChat
        </div>
    </div>
    <!-- Container Containing Name, UserName and Links -->
    <div class="container">
        <!-- User's Image: Currently Placeholder Image -->
        <img id="user-image" src="https://via.placeholder.com/150x150" class="center-block circle responsive-img"
             alt="User Image">
        <!-- User's Name -->
        <h4 class="center"><%= name %></h4>
        <!-- User's Username -->
        <p class="center flow-text"><%= chatter.username %></p>



        <!-- TODO: Change The links to be Icons with ToolTips -->
        <!-- LINKS TO DIFFERENT PAGES -->
        <div class="row">
            <!-- Chats -->
            <div class="col s6">
                <a href="/chats" class="btn btn-block">
                    Chats
                    &nbsp;&nbsp;<i class="fa fa-whatsapp"></i>
                </a>
            </div>
            <!-- Add Chat -->
            <div class="col s6">
                <a href="/chats/new" class="btn btn-block">
                    Add Chat
                    &nbsp;<i class="fa fa-plus-square-o"></i>
                </a>
            </div>
            <!-- Groups -->
            <div class="col s6">
                <a href="/groups" class="btn btn-block">
                    Join a Group
                    &nbsp;&nbsp;<i class="fa fa-users"></i>
                </a>
            </div>
            <!-- Join a group -->
            <div class="col s6">
                <a href="/groups/new" class="btn btn-block">
                    Create a Group
                    &nbsp;&nbsp;<i class="fa fa-pencil"></i>
                </a>
            </div>
            <!-- Join a Channel -->
            <div class="col s6">
                <a href="/channels" class="btn btn-block">
                    Join Channel
                    &nbsp;&nbsp;<i class="fa fa-users"></i>
                </a>
            </div>
            <!-- Create a Channel -->
            <div class="col s6">
                <a href="/channels/new" class="btn btn-block">
                    Create Channel
                    &nbsp;&nbsp;<i class="fa fa-pencil"></i>
                </a>
            </div>
            <!-- Favourite Channels -->
            <div class="col s6">
                <a href="/channels/fav" class="btn btn-block">
                    Favourite Channels
                    &nbsp;&nbsp;<i class="fa fa-pencil"></i>
                </a>
            </div>
            <!-- Logout -->
            <div class="col s6">
                <a href="/logout" class="btn btn-block">
                    Logout
                    &nbsp;&nbsp;<i class="fa fa-sign-out"></i>
                </a>
            </div>
        </div>

    </div>  <!-- END OF SIDEBAR CONTAINER -->
</div>  <!-- END OF USER DATA SIDEBAR -->


<!-- MAIN CHATS PAGE HERE -->
<div id="main">
    <!-- Chats Heading: Username of Receiver -->
    <div class="green lighten-3" id="chats-heading">
        <h3 class="center" id="chat-heading"><%= title %></h3>
    </div>

    <!-- Chat Box -->
    <div id="chat-box">
        <!-- Input Container: Chat input and Send button -->
        <div id="message-box" class="container">
            <div class="row">
                <!-- Input Box -->
                <div class="col s9">
                    <input id="input" type="text">
                </div>
                <!-- Send Button -->
                <div class="col s3">
                    <button id="send-button" class="btn">Send</button>
                </div>
            </div>
        </div>
        <!-- Message Display Container -->
        <div class="container" id="messages-container">
            <ul id="messages-list">

            </ul>
        </div>
    </div>  <!-- End of Chat Box -->


</div>  <!-- END OF MAIN PAGE -->


</body>
</html>